{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "DfePublicApi": {
    "BaseUrl": "[ API BASE URL ]",
    "ServiceAudience": "signin.education.gov.uk",
    "ApiSecret": "[ API SECRET ]",
    "ClientId": "[ CLIENT ID ]"
  },
  "DfeSignIn": {
    "Authority": "[ DFE SIGN-IN AUTHORITY ]",
    "MetaDataUrl": "[ DFE SIGN-IN METADATA ]",
    "ClientId": "[ CLIENT ID ]",
    "ClientSecret": "[ CLIENT SECRET ]",
    "CallbackUrl": "/auth/cb",
    "SignoutCallbackUrl": "/signout/complete",
    "SignoutRedirectUrl": "/account/signed-out",
    "Scopes": [
      "openid",
      "email",
      "profile",
      "organisation"
    ],
    "CookieName": "sa-login",
    "CookieExpireTimeSpanInMinutes": 60,
    "GetClaimsFromUserInfoEndpoint": true,
    "SaveTokens": true,
    "SlidingExpiration": true,
    "DiscoverRolesWithPublicApi": false
  }
}
